extends layouts/default

block content
  // Header
  include sections/header

  main
    .container.py-md-5
      include components/flash

      h2
        img.avatar.rounded-circle.mr-2(src= userProfile.avatar)
        span= userProfile.username

        if (userProfile._id != visitorId)
          if (isFollowing)
            form.ml-2.d-inline(action=`/removeFollow/${userProfile.username}` method='POST')
              button(class='btn btn-danger btn-sm') Stop Following
                i.fe.fe-minus.align-middle.ml-2
          else
            form.ml-2.d-inline(action=`/follow/${userProfile.username}` method='POST')
              button.btn.btn-primary.btn-sm.align-middle.ml-2 Follow
                i.fe.fe-plus
      .profile-nav.nav.nav-tabs.pt-2.mb-4
        a.profile-nav-link.nav-item.nav-link.active(href='#') Posts: 3
        a.profile-nav-link.nav-item.nav-link(href='#') Followers: 3
        a.profile-nav-link.nav-item.nav-link(href='#') Following: 2
      if (posts && posts.length)
        .list-group
          each post in posts
            a.list-group-item.list-group-item-action(href=`/post/${post._id}`)
              img.avatar.rounded-circle.mr-2.avatar-xs(src= userProfile.avatar)
              strong.mr2.d-inline-block= post.title
              span.d-inline-block.ml-2= `on ${post.createdDate.getMonth() + 1}/${post.createdDate.getDay()}/${post.createdDate.getFullYear()}`

  // Footer
  include sections/footer
