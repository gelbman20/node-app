extends layouts/default

block content
  // Header
  include sections/header

  // Main
  main
    .container.py-md-5.text-center
      .row.justify-content-center
        .col-xl-10
          include components/flash
          if (followingsPosts && followingsPosts.length)
            h2.mb-4 The Latest From Those You Follow
            .card
              .list-group.text-left
                each post in followingsPosts
                  a.list-group-item.list-group-item-action(href=`/post/${post._id}`)
                    img.avatar.rounded-circle.mr-2.avatar-xs(src= post.author.avatar)
                    strong.mr2.d-inline-block= post.title
                    span.d-inline-block.ml-2= `on ${post.createdDate.getMonth() + 1}/${post.createdDate.getDay()}/${post.createdDate.getFullYear()}`
          else
            h2.font-weight-normal Hello
              = ' '
              span.font-weight-bold.text-primary= user.username
              | , your feed is empty.
            p.lead.text-muted Your feed displays the latest posts from the people you follow. If you don&rsquo;t have any friends to follow that&rsquo;s okay; you can use the &ldquo;Search&rdquo; feature in the top menu bar to find content written by people with similar interests and then follow them.

  // Footer
  include sections/footer
